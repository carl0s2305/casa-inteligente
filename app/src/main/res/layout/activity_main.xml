<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- ðŸ¡ Icono principal -->
        <ImageView
            android:id="@+id/imgCasa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/casa_fondo"
            android:contentDescription="Casa"
            android:layout_marginBottom="16dp"/>

        <!-- ðŸ‘‹ Bienvenida -->
        <TextView
            android:id="@+id/txtBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- ðŸ  Botones en 2 columnas -->
        <GridLayout
            android:id="@+id/gridHabitaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Puedes duplicar este bloque cambiando ID, texto y drawable -->

            <!-- ðŸ”³ Puerta principal -->
            <LinearLayout
                android:id="@+id/btnPuerta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/rounded_button">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_door"
                    android:contentDescription="Puerta" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puerta"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ðŸ› RecÃ¡mara 1 -->
            <LinearLayout
                android:id="@+id/btnRecamara1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/rounded_button">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_bedroom"
                    android:contentDescription="RecÃ¡mara 1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RecÃ¡mara 1"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ðŸ› RecÃ¡mara 2 -->
            <LinearLayout
                android:id="@+id/btnRecamara2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/rounded_button">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_bedroom"
                    android:contentDescription="RecÃ¡mara 2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RecÃ¡mara 2"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ðŸ›‹ Sala -->
            <LinearLayout
                android:id="@+id/btnSala"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/rounded_button">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_livingroom"
                    android:contentDescription="Sala" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sala"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ðŸš— Garaje -->
            <LinearLayout
                android:id="@+id/btnGaraje"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/rounded_button">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_garage"
                    android:contentDescription="Garaje" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Garaje"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- ðŸŒ± Invernadero -->
            <LinearLayout
                android:id="@+id/btnInvernadero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/rounded_button">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_greenhouse"
                    android:contentDescription="Invernadero" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invernadero"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </GridLayout>

        <!-- ðŸ”µ Conectar Bluetooth -->
        <Button
            android:id="@+id/btnBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conectar Bluetooth"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
